# Maintainer: justforlxz <justforlxz@gmail.com>
pkgname=deepin-icon-theme-git
pkgver=2021.11.24.r0.g572b049d
pkgrel=1
pkgdesc="Deepin GTK Theme"
arch=('any')
url="https://github.com/linuxdeepin/deepin-icon-theme"
makedepends=('git')
license=('LGPL3')
optdepends=('gtk-engine-murrine: for gtk2 themes')
provides=('deepin-icon-theme')
conflicts=('deepin-icon-theme')
groups=('deepin-git')
source=("$pkgname-$pkgver::source.tar.gz")
sha512sums=('SKIP')
pkgver() {
    cd $pkgname-$pkgver
    git describe --long --tags | sed 's/\([^-]*-g\)/r\1/;s/-/./g'
}

prepare() {
    cd $pkgname-$pkgver
}

build() {
  cd $pkgname-$pkgver
  make hicolor-links
}

package() {
  cd $pkgname-$pkgver
  make DESTDIR="$pkgdir" install
  cp -a ./Sea ./usr/share/icons/hicolor "$pkgdir"/usr/share/icons/
}
